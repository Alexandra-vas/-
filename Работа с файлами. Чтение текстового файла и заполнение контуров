#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

bool isContourClosed(char** image, int rows, int cols) 
{
    for (int i = 0; i < rows; i++) 
    {
        for (int j = 0; j < cols; j++) 
        {
            if (i == 0 || i == rows - 1 || j == 0 || j == cols - 1) 
            {
                if (image[i][j] != '*') 
                {
                    return false; 
                }
            }
        }
    }
    return true;
}

int main() 
{
    int rows = 5;
    int cols = 10;

    char** image = (char**)malloc(rows * sizeof(char*));
    for (int i = 0; i < rows; i++) 
    {
        image[i] = (char*)malloc(cols * sizeof(char));
    }

    FILE* inputFile = fopen("image.txt", "r");
    if (inputFile != NULL) 
    {
        printf("Чтение изображения из файла:\n");
        for (int i = 0; i < rows; i++)
        {
            for (int j = 0; j < cols; j++)
            {
                char ch = fgetc(inputFile);
                while (ch == '\n' || ch == '\r') 
                {
                    ch = fgetc(inputFile);
                }
                image[i][j] = ch;
                printf("%c", image[i][j]);
            }
            printf("\n");
        }
        fclose(inputFile);
    } else 
    {
        printf("Файл не найден, создаем новое изображение.\n");
        
        for (int i = 0; i < rows; i++) 
        {
            for (int j = 0; j < cols; j++) 
            {
                if (i == 0 || i == rows - 1 || j == 0 || j == cols - 1) 
                {
                    image[i][j] = '*';
                } else
                {
                    image[i][j] = '.';
                }
                printf("%c", image[i][j]);
            }
            printf("\n");
        }
    }

    if (isContourClosed(image, rows, cols)) 
    {
        printf("\nКонтур замкнут.\n");
    } else 
    {
        printf("\nКонтур не замкнут!\n");
    }

    FILE* outputFile = fopen("image.txt", "w");
    if (outputFile != NULL) 
    {
        for (int i = 0; i < rows; i++) 
        {
            for (int j = 0; j < cols; j++) 
            {
                fprintf(outputFile, "%c", image[i][j]);
            }
            fprintf(outputFile, "\n");
        }
        fclose(outputFile);
        printf("Изображение сохранено в image.txt\n");
    } else 
    {
        printf("Ошибка сохранения файла.\n");
    }

    for (int i = 0; i < rows; i++) 
    {
        free(image[i]);
    }
    free(image);

    return 0;
}
